<script>
const quizData = [
{ q: "Which continent is the largest by area?", options: ["Asia", "Africa", "Europe"], answer: "Asia" },
{ q: "What is the longest river in the world?", options: ["Nile", "Amazon", "Yangtze"], answer: "Nile" },
